<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:background="#fff"
    android:elevation="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgListaPaciente"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/person"/>

    <TextView
        android:id="@+id/txtListaPacienteNombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="106dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Nombre"
        android:textColor="#686868"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Alexander Pierrot" />

    <TextView
        android:id="@+id/txtListaPacienteEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtListaPacienteNombres"
        android:layout_below="@+id/txtListaPacienteNombres"
        android:text="Cargo"
        android:textSize="20dp"
        tools:text="CEO" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/chevron_right"/>
</RelativeLayout>