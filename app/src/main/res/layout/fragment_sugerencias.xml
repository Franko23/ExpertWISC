<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentosPrincipales.FragmentosResultados.Sugerencias">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingLeft="15dp"
            android:src="@drawable/teach1"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="Estimado FranKo, hemos notado que Miguel tiene algunas deficiencias en las siguientes pruebas"
            android:id="@+id/txt_sugerencia"
            android:padding="5dp"/>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/result_iq"
            android:text="98"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="#fff"
            android:background="@drawable/iq"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec_test"
            android:layout_margin="10dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>