<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="50dp">
    <RadioGroup
        android:id="@+id/radiocf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/border">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:textColor="#fff"
            android:id="@+id/txt_titulo"
            android:text="Selcciona la prueba a que serÃ¡ reemplazada -"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_prueba_uno"
            android:id="@+id/radioButtonCc"
            android:layout_marginTop="61dp"
            android:checked="false" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_prueba_cuatro"
            android:id="@+id/radioButtonCo"
            android:layout_marginTop="61dp"
            android:checked="false"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_prueba_ocho"
            android:id="@+id/radioButtonM"
            android:layout_marginTop="61dp"
            android:checked="false"/>
    </RadioGroup>

</LinearLayout>