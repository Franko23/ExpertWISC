<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentosPrincipales.RegistroPaciente">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:elevation="5dp"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtNombres"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombres"
                            android:inputType="textPersonName"
                            android:singleLine="true" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtApellidos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellidos"
                            android:inputType="textPersonName"
                            android:singleLine="true" />

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:id="@+id/txtMotivoConsulta"
                            android:ems="10"
                            android:hint="Motivo de la consulta" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtAntecedentes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Antecedentes"
                            android:inputType="textMultiLine"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp">

                        <ImageView
                            android:id="@+id/imgPaciente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:src="@drawable/n_paciente" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_calcular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/txtFechaNacimiento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:hint="Fecha de nacimiento:"/>
                        <TextView
                            android:id="@+id/txtFechaEvaluacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:visibility="gone"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1"
                            android:hint="Fecha de evaluaciÃ³n: "/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/edad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:text="Edad"/>

                        <Button
                            android:id="@+id/calcular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:background="@color/colorAccent"
                            android:text="Calcular"
                            android:textColor="#fff"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/guardar_nuevo_paciente"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="GUARDAR"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="gone"
                app:spinning_bar_color="#fff"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp"/>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</RelativeLayout>