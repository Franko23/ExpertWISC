<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/lista_Test"
        android:background="@drawable/border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Test nro: "
                android:padding="5dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#181818"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"></LinearLayout>
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Fecha de evaluaciÃ³n: "
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#181818"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"></LinearLayout>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Estado"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/nro_test"
                android:padding="5dp"
                android:text="1"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#181818"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"></LinearLayout>
            <TextView
                android:id="@+id/fecha_prueba"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="02-05-18"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_height="fill_parent"
                android:background="#181818"></LinearLayout>
            <TextView
                android:id="@+id/estado"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="#fff"
                android:text="FINALIZADO">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/up_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        app:srcCompat="@drawable/cloud_upload" />



</LinearLayout>